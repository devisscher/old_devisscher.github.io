&lt;p&gt;&lt;input type=&quot;checkbox&quot; name=&quot;item_checkbox&quot; onclick=&quot;item_checked(this.id);&quot; id=&quot;tdevisscher_warm_socks&quot; /&gt; Warm socks&lt;/p&gt;

&lt;p&gt;&lt;input type=&quot;checkbox&quot; name=&quot;item_checkbox&quot; onclick=&quot;item_checked(this.id);&quot; id=&quot;tdevisscher_toque&quot; /&gt; Toque&lt;/p&gt;

&lt;p&gt;&lt;input type=&quot;checkbox&quot; name=&quot;item_checkbox&quot; onclick=&quot;item_checked(this.id);&quot; id=&quot;tdevisscher_hat&quot; /&gt; Hat&lt;/p&gt;

&lt;p&gt;Please feel free to comment your additions. I may have forgotten stuff.&lt;/p&gt;

&lt;script&gt;

function item_checked(item_id)

{	
	if(localStorage[item_id]){
		confirm(&quot;Removing item, are you sure?&quot;)
		localStorage.removeItem([item_id]);
	} else {
